{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TaskReminderApp",
  "version": "1.4.4",
  "identifier": "ylfty.top",
  "build": {
    "beforeDevCommand": "pnpm dev -- --host 127.0.0.1 --port 5173 --strictPort",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://127.0.0.1:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "任务提醒应用",
        "width": 1000,
        "height": 650,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "decorations": false,
        "transparent": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi"
    ],
    "icon": [
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "windows": {
      "wix": {
        "language": "zh-CN"
      }
    }
  }
}
